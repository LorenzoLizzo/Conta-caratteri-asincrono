<Window x:Class="Conta_caratteri_asincorno.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Conta_caratteri_asincorno"
        mc:Ignorable="d"
        Title="Conta caratteri" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        
        <Label x:Name="lblCaricamento" Content="Contando i caratteri del file..." HorizontalAlignment="Center" VerticalAlignment="Bottom" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Width="772" Height="83" FontSize="48"/>
        <ProgressBar x:Name="progressBar" HorizontalAlignment="Center" Height="55" VerticalAlignment="Top" Width="764" Grid.Row="1"/>
        <Label x:Name="lblOutput" Content="" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="36"  Grid.Row="1"/>
    </Grid>
</Window>
